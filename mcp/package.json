{
  "name": "@julep/unified-mcp",
  "version": "1.0.0",
  "description": "Unified MCP Server for Julep - combining documentation search and SDK access",
  "author": "Julep Developers <developers@julep.ai>",
  "license": "Apache-2.0",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "julep-mcp": "dist/index.js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "dev:http": "tsx src/index.ts --transport http",
    "start": "node dist/index.js",
    "test": "jest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write 'src/**/*.{ts,tsx,js,jsx,json}'"
  },
  "dependencies": {
    "@julep/sdk": "^1.0.0",
    "@julep/docs-mcp": "^1.0.0",
    "@julep/sdk-mcp": "^2.2.0",
    "@modelcontextprotocol/sdk": "^1.11.5",
    "@mintlify/openapi-types": "^0.0.0",
    "@mintlify/validation": "^0.1.320",
    "axios": "^1.8.1",
    "dashify": "^2.0.0",
    "js-yaml": "^4.1.0",
    "trieve-ts-sdk": "^0.0.62",
    "yargs": "^17.7.2",
    "zod": "^3.25.20",
    "zod-to-json-schema": "^3.24.5",
    "express": "^4.21.2",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "@types/node": "^20.0.0",
    "@types/express": "^5.0.0",
    "@types/cors": "^2.8.17",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^8.49.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.4.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.0",
    "tsx": "^4.0.0",
    "typescript": "^5.8.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/julep-ai/julep.git",
    "directory": "mcp"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "julep",
    "ai",
    "sdk",
    "documentation"
  ]
}